{
    "info": {
        "name": "RealWorld Conduit - Basic API",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
        "description": "Minimal collection for register/login/articles to use with Newman"
    },
    "item": [
        {
            "name": "Register User",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{ \"user\": { \"username\": \"{{username}}\", \"email\": \"{{email}}\", \"password\": \"{{password}}\" } }"
                },
                "url": {
                    "raw": "{{base_url}}/users",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "users"
                    ]
                }
            },
            "response": [],
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "pm.test('status is 201 or 200', function () {",
                            "    pm.expect(pm.response.code).to.be.oneOf([200,201,201]);",
                            "});",
                            "if (pm.response.code === 200 || pm.response.code === 201) {",
                            "    var body = pm.response.json();",
                            "    pm.environment.set('token', body.user.token);",
                            "    pm.environment.set('username', body.user.username);",
                            "}"
                        ]
                    }
                }
            ]
        },
        {
            "name": "Login User",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{ \"user\": { \"email\": \"{{email}}\", \"password\": \"{{password}}\" } }"
                },
                "url": {
                    "raw": "{{base_url}}/users/login",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "users",
                        "login"
                    ]
                }
            },
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "pm.test('login OK', function () { pm.expect(pm.response.code).to.equal(200); });",
                            "var body = pm.response.json(); pm.environment.set('token', body.user.token);"
                        ]
                    }
                }
            ]
        },
        {
            "name": "Create Article",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    },
                    {
                        "key": "Authorization",
                        "value": "Token {{token}}"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{ \"article\": { \"title\": \"{{article_title}}\", \"description\": \"desc\", \"body\": \"body content\" } }"
                },
                "url": {
                    "raw": "{{base_url}}/articles",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "articles"
                    ]
                }
            },
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "pm.test('create article status', function(){ pm.expect(pm.response.code).to.be.oneOf([200,201]); });",
                            "var body = pm.response.json(); pm.environment.set('article_slug', body.article.slug);"
                        ]
                    }
                }
            ]
        },
        {
            "name": "Get Article by Slug",
            "request": {
                "method": "GET",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "url": {
                    "raw": "{{base_url}}/articles/{{article_slug}}",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "articles",
                        "{{article_slug}}"
                    ]
                }
            },
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "pm.test('get article ok', function(){ pm.expect(pm.response.code).to.equal(200); });"
                        ]
                    }
                }
            ]
        },
        {
            "name": "Delete Article",
            "request": {
                "method": "DELETE",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Token {{token}}"
                    }
                ],
                "url": {
                    "raw": "{{base_url}}/articles/{{article_slug}}",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "articles",
                        "{{article_slug}}"
                    ]
                }
            },
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "pm.test('delete article 204 or 200', function(){ pm.expect(pm.response.code).to.be.oneOf([200,204]); });"
                        ]
                    }
                }
            ]
        }
    ]
}